<resources>

    <style name="MaterialTheme" parent="MaterialTheme.Base">

    </style>

    <style name="MaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="colorControlActivated">@color/colorWhite</item>
        <item name="colorControlHighlight">@color/colorWhite</item>
        <item name="colorControlNormal">@color/colorWhite</item>
    </style>

    <style name="ratingBar" parent="@android:style/Widget.RatingBar">
        <item name="colorControlActivated">@color/md_grey_500</item>
        <item name="colorControlHighlight">@color/md_grey_500</item>
        <item name="colorControlNormal">@color/md_grey_500</item>
    </style>


    <style name="ratingBarAddOpinion" parent="@android:style/Widget.RatingBar">
        <item name="colorControlActivated">@color/colorYellow</item>
        <item name="colorControlHighlight">@color/colorWhite</item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="android:minHeight">30dip</item>
        <item name="android:maxHeight">38dip</item>
    </style>

    <style name="createRouteEditText" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>


    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/textColorPrimary</item>
    </style>


    <style name="switch_style" parent="Theme.AppCompat.Light">
        <!-- Active thumb color & Active track color(30% transparency) -->
        <item name="colorControlActivated">@color/colorPrimary</item>
        <!-- Inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/md_grey_500</item>
        <!-- Inactive track color(30% transparency) -->
        <item name="android:colorForeground">@color/md_grey_500</item>
    </style>

    <style name="add_opinion_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/colorPrimary</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">#FFFFFF</item>
        <!-- Used for the background -->
        <item name="android:background">#FFFFFF</item>
    </style>


</resources>