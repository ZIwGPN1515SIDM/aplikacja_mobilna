<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View"/>
        <variable
            name="place"
            type="com.example.magda.systeminformacyjny.models.IPlaceItem"/>

        <variable
            name="showButtons"
            type="Boolean"/>

        <variable
            name="viewModel"
            type="com.example.magda.systeminformacyjny.view_models.ActivityLocationViewModel"/>
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fitsSystemWindows="true">

        <include layout="@layout/toolbar_layout"
            android:id="@+id/toolbarLayout"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.35">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:image="@{place.photo}"
            android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/activity_location_buttons_margin_right"
                android:visibility="@{showButtons? View.VISIBLE: View.GONE}"
                android:layout_marginBottom="@dimen/activity_location_buttons_margin_bottom"
                android:layout_gravity="bottom|right">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:onClick="@{v->viewModel.openPlacesList(v, place.id)}"
                    android:src="@mipmap/sublocations_button"
                    android:layout_marginBottom="@dimen/activity_location_margin_between_buttons"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:visibility="gone"
                    android:src="@mipmap/add_button"/>

            </LinearLayout>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.65"
            android:orientation="vertical">

            <android.support.design.widget.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:elevation="6dp"
                app:tabGravity="fill"
                android:background="@color/colorPrimaryLight"
                app:tabIndicatorColor="@color/primary"
                app:tabMaxWidth="0dp"
                app:tabMode="fixed" />

            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    </LinearLayout>

</layout>