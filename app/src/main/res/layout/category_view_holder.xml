<?xml version="1.0" encoding="utf-8"?>

<layout>
    
    <data>
        <variable
            name="category"
            type="com.example.magda.systeminformacyjny.models.Category"/>

        <variable
            name="colorType"
            type="Integer"/>
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/category_view_holder_margin_top"
        android:padding="@dimen/category_view_holder_padding"
        android:background="@{colorType == category.COLOR_PRIMARY_TYPE ? @color/colorPrimary:@color/textColorPrimary}"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:text="@{category.name}"
            android:textSize="@dimen/category_view_holder_text_size" />

    </LinearLayout>

</layout>