<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background"
    android:id="@+id/activityMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activityVerticalMargin"
    android:paddingLeft="@dimen/activityHorizontalMargin"
    android:paddingRight="@dimen/activityHorizontalMargin"
    android:paddingTop="@dimen/activityVerticalMargin"
    tools:context="com.example.magda.systeminformacyjny.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/logoSize"
        android:layout_height="@dimen/logoSize"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/logo" />

    <com.facebook.login.widget.LoginButton xmlns:facebook="http://schemas.android.com/apk/res-auto"
        android:id="@+id/registerButton"
        android:layout_width="@dimen/facebookButtonWidth"
        android:layout_height="match_parent"
        android:layout_alignStart="@+id/imageView"
        android:layout_below="@+id/imageView"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/facebookButtonTopMargin"
        android:layout_marginBottom="@dimen/facebookButtonBottomMargin"
        android:textSize="@dimen/facebookButtonTextSize"
        facebook:com_facebook_login_text="@string/facebookButtonText" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="@dimen/registeredTextViewWidth"
        android:layout_height="wrap_content"
        android:layout_below="@id/registerButton"
        android:layout_alignLeft="@id/registerButton"
        android:text="@string/registered"
        android:textSize="@dimen/registeredTextSize"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/loginHyperlink"
        android:layout_width="@dimen/loginButtonWidth"
        android:layout_height="wrap_content"
        android:layout_below="@id/registerButton"
        android:layout_toRightOf="@id/textView2"
        android:clickable="true"
        android:text="@string/login"
        android:textColor="@color/text_color"
        android:textColorHighlight="#C0C0C0"
        android:textSize="@dimen/loginTextSize"
        android:textAlignment="center"/>

</RelativeLayout>
