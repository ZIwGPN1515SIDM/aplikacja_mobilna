<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>
        <variable
            name="viewModel"
            type="com.example.magda.systeminformacyjny.view_models.FragmentCreateRouteViewModel"/>
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+  Dodaj miejsce"
                android:clickable="true"
                android:onClick="@{viewModel::addPlace}"
                android:textCursorDrawable="@null"
                android:background="@drawable/text_view_selector"
                android:textSize="24sp"
                android:textStyle="bold|italic" />

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/button_selector"
                android:text="Gotowe"
                android:onClick="@{()->viewModel.done(routeNameEditText)}"
                android:textColor="@color/colorWhite" />

        </LinearLayout>

        <EditText
            android:id="@+id/routeNameEditText"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="Nazwa trasy"
            android:maxLength="100"
            android:maxLines="1"
            android:textSize="14sp"
            android:theme="@style/createRouteEditText" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</layout>