<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>
        <variable
            name="viewModel"
            type="com.example.magda.systeminformacyjny.view_models.FragmentCreateRouteViewModel"/>
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/fragment_create_route_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fragment_create_route_margin_bottom"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fragment_crate_route_add_place"
                android:clickable="true"
                android:onClick="@{viewModel::addPlace}"
                android:textCursorDrawable="@null"
                android:background="@drawable/text_view_selector"
                android:textSize="@dimen/fragment_create_route_add_text_size"
                android:textStyle="bold|italic" />

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="@dimen/fragment_create_route_button_height"
                android:background="@drawable/button_selector"
                android:text="@string/fragment_create_route_button"
                android:onClick="@{()->viewModel.done(routeNameEditText)}"
                android:textColor="@color/colorWhite" />

        </LinearLayout>

        <EditText
            android:id="@+id/routeNameEditText"
            android:layout_width="@dimen/fragment_create_route_route_name_width"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fragment_create_route_route_name_margin_bottom"
            android:hint="@string/fragment_create_route_hint"
            android:maxLength="100"
            android:maxLines="1"
            android:textSize="@dimen/fragment_create_route_route_name_text_size"
            android:theme="@style/createRouteEditText" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</layout>