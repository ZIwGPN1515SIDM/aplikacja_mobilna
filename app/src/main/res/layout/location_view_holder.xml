<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="mainPlace"
            type="com.example.magda.systeminformacyjny.models.MainPlace"/>
    </data>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:elevation="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/view_holder_layout_margin">

            <ImageView
                android:id="@+id/viewHolderIcon"
                android:layout_width="@dimen/view_holder_logo_size"
                android:layout_height="@dimen/view_holder_logo_size"
                android:layout_marginRight="@dimen/view_holder_logo_margin_right"
                android:scaleType="fitXY"
                app:image="@{mainPlace.photos.get(0).URL}" />

            <TextView
                android:id="@+id/locationName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/viewHolderIcon"
                android:layout_toLeftOf="@+id/settingsButton"
                android:text="@{mainPlace.name}"
                android:textSize="@dimen/view_holder_location_name_size" />

            <ImageButton
                android:id="@+id/settingsButton"
                android:layout_width="@dimen/location_settings_button_size"
                android:layout_height="@dimen/location_settings_button_size"
                android:src="@mipmap/report_delete_menu"
                android:layout_alignParentRight="true"
                android:background="@null"/>

            <TextView
                android:id="@+id/locationDescriptionShort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/locationName"
                android:layout_toRightOf="@+id/viewHolderIcon"
                android:text="@{mainPlace.categoryName}"
                android:textSize="@dimen/view_holder_description_shosr_size"
                android:textStyle="italic" />

            <RatingBar
                android:id="@+id/locationRating"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/locationDescriptionShort"
                android:layout_toRightOf="@+id/viewHolderIcon"
                android:clickable="false"
                android:isIndicator="true"
                android:numStars="5"
                android:progressBackgroundTint="@color/md_yellow_800"
                android:progressTint="@color/md_yellow_800"
                android:rating="@{mainPlace.sumScore}"
                android:secondaryProgressTint="@color/md_yellow_800"
                android:stepSize="0.1"
                android:visibility="visible" />

            <TextView
                android:id="@+id/locationDescriptionLong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/locationRating"
                android:layout_toRightOf="@+id/viewHolderIcon"
                android:maxLength="280"
                android:text="@{mainPlace.description}" />

            <TextView
                android:id="@+id/locationDistance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/locationDescriptionLong"
                android:layout_marginTop="@dimen/view_holder_location_distance_margin_top"
                android:layout_toRightOf="@+id/viewHolderIcon"
                android:text="Odległość: 2,0km"
                android:textStyle="bold" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</layout>